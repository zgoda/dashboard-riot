{
  "name": "dashboard-riot",
  "private": true,
  "version": "1.0.0",
  "description": "Brewlog dashboard as Riot.js application",
  "main": "index.js",
  "scripts": {
    "test": "nyc --require esm --require jsdom-global/register --require @riotjs/register mocha src/**/*.spec.js",
    "cov": "nyc report --reporter=text-lcov | coveralls",
    "cov-html": "nyc report --reporter=html",
    "build": "NODE_ENV=production rollup -c",
    "prepublishOnly": "npm test",
    "start": "npm run watch & npm run server",
    "watch": "rollup -c -w 'src/**'",
    "server": "browser-sync start --files 'dist/*, style.css, index.html' --server"
  },
  "eslintConfig": {
    "extends": "eslint-config-riot",
    "rules": {
      "sort-imports": "off"
    },
    "ignorePatterns": [
      "dist/"
    ]
  },
  "author": "Jarek Zgoda",
  "license": "MIT",
  "devDependencies": {
    "@riotjs/compiler": "^5.1.3",
    "@riotjs/register": "^5.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "browser-sync": "^2.26.13",
    "chai": "^4.2.0",
    "eslint": "^7.17.0",
    "eslint-config-riot": "^3.0.0",
    "esm": "^3.2.25",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "rollup": "^2.35.1",
    "rollup-plugin-riot": "^5.0.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "riot": "^5.1.2"
  }
}
